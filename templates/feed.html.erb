<!DOCTYPE html>

<html lang='en'>
  <head>
    <%= render_partial(:_head) %>
  </head>
  <body>
    <header>
      <%= render_partial(:_header) %>
    </header>
    <main>
    <article class="feed">
      <a href="./<%= pages[0]['path'] %>">
        <section class="feed-lg">
          <figure>
            <img src="./<%= pages[0]['image_banner_md'] %>" />
          </figure>
          <div class="page-type">
            <%= pages[0]['page_type'] %>
          </div>
          <strong>
            <%= pages[0]['title'] %>
          </strong>
          <div class="author-name">
            by <%= pages[0]['author_name'] %>
          </div>
          <p>
            <%= pages[0]['description'] %>
          </p>
        </section>
      </a>
      <div class="feed-md-container">
        <section class="feed-md">
          <a href="./<%= pages[1]['path'] %>.html">
            <figure>
              <img src="./<%= pages[1]['image_banner_sm'] %>" />
            </figure>
            <div class="page-type">
              <%= pages[1]['page_type'] %>
            </div>
            <strong>
              <%= pages[1]['title'] %>
            </strong>
            <div class="author-name">
              by <%= pages[1]['author_name'] %>
            </div>
            <p><%= pages[1]['description'] %></p>
          </a>
        </section>
        <section class="feed-md">
          <a href="./<%= pages[2]['path'] %>.html">
            <figure>
              <img src="./<%= pages[2]['image_banner_sm'] %>" />
            </figure>
            <div class="page-type">
              <%= pages[2]['page_type'] %>
            </div>
            <strong>
              <%= pages[2]['title'] %>
            </strong>
            <div class="author-name">
              by <%= pages[2]['author_name'] %>
            </div>
            <p><%= pages[2]['description'] %></p>
          </a>
        </section>
      </div>
      <hr>
      <% pages.slice(3..-1).each do |page| %>
        <a href="./<%= page['path'] %>.html">
          <section class="feed-sm">
            <figure>
              <img src="./<%= page['image_banner_sm'] %>" />
            </figure>
            <div>
              <div class="page-type">
                <%= page['page_type'] %>
              </div>
              <strong>
                <%= page['title'] %>
              </strong>
              <div class="author-name">
                by <%= page['author_name'] %>
              </div>
              <p><%= page['description'] %></p>
            </div>
          </section>
        </a>
      <% end %>
    </article>
    </main>
  </body>
</html>

